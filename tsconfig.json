{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "esnext"
    ],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@utils/*": ["src/utils/*"]
    },
    "plugins": [
      { "name": "typescript-tslint-plugin" }
    ],
    "types": [
      "webpack-env",
      "node",
      "jest"
    ]
  },
  "exclude": ["node_modules", "dist"]
}
